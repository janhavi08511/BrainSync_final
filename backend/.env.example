# MongoDB Configuration
# Must supply a valid MongoDB connection string, e.g.:
# MONGODB_URL=mongodb://localhost:27017
MONGODB_URL=
DATABASE_NAME=brainsync

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
DEBUG=false
API_PREFIX=/api/v1
# The app now requires a MongoDB server by default. Only enable the
# in-memory fallback for experiments or offline development (not recommended).
USE_IN_MEMORY_DB=false
VITE_API_URL=http://localhost:8000
# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# HuggingFace API token for advanced summarization models (optional).
# If you do not set this, the app will fall back to a simple builtin summarizer.
VITE_HF_TOKEN=
